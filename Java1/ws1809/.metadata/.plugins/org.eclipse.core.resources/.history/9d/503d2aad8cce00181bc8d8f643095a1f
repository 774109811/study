package day08_Guess;

import java.util.Scanner;

public abstract class Guessgame {
	public void start() {
		String r= suiji();
		System.out.println(r);
		tishi();
		while(true){
			System.out.println("²Â£º");
			String c= new Scanner(System.in).nextLine();
			String result =bijiao(c,r);
			System.out.println(result);
			if(caidui()){
				break;
			}
		}
		

	}

	private abstract String suiji();

	private abstract void tishi();

	private abstract String bijiao(String c, String r);


	private abstract boolean caidui();
}
